{% extends "admin.njk" %}

{% block tabs %}
  {{ tab.adminTab(1) }}
{% endblock %}

{% block content %}
  <div id="poll_list_container">
    {% for poll in polls %}
      {{ pc.pollCard(poll, isEditing=true) }}
    {% else %}
        ðŸ˜® Empty. Once a poll is created it'll appear here!
      {% endfor %}
  </div>

  <script>
    window.onload = function () {
      function getConfirmation() {
        var retVal = confirm("Are you sure you want to end this poll?");

        return Promise.resolve(retVal);
      }

      document
        .querySelector(".poll__end")
        .addEventListener("click", function (event) {
          event.preventDefault();

          var pollId = event.currentTarget.dataset.pollid;

          getConfirmation().then(isOk => {
            if (isOk) {
              fetch("/api/polls/" + pollId + "/close", {method: "GET"})
                .then(response => {
                  if (response.ok) {
                    return response.json();
                  }

                  return response
                    .json()
                    .then(Promise.reject);
                })
                .then(result => {
                  window
                    .location
                    .reload();
                })
                .catch(error => {
                  alert(error.message);
                });
            }
          })
        });
    };
  </script>

{% endblock %}